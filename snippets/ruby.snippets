# #!/usr/bin/env/ruby
snippet rspec
	require 'spec_helper'

	describe ${1:ClassName} do
		${2}
	end
snippet describe
	describe ${1:description} do
		${2}
	end
snippet it
	it "${1:does something}" do
		${2}
	end
snippet context
	context "${1}" do
		${2}
	end
snippet Given
	Given(:${1:variable_name}) { ${2} }
snippet Givendo
	Given(${1:variable_name}) do
		${2}
	end
snippet When
	When { ${2} }
snippet Whendo
	When do
		${2}
	end
snippet Then
	Then { ${2} }
snippet Thendo
	Then do
		${2}
	end
